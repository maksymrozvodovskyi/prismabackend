generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  EMPLOYEE
}

enum ProjectStatus {
  PLANNED
  INPROGRESS
  ONHOLD
  COMPLETED
  SUPPORT
}

enum ActivityType {
  CODING
  REVIEW
  STUDING
  SICKLEAVE
  VACATION
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projects  Project[]
  workLogs  WorkLog[]
}

model Project {
  id          String   @id @default(cuid())
  name        String
  description String?
  status      ProjectStatus
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  users     User[]
  workLogs  WorkLog[]
}

model WorkLog {
  id         String       @id @default(cuid())
  userId     String
  projectId  String
  date       DateTime     @db.Date
  hours      Float
  activity   ActivityType
  isApproved Boolean?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt

  user      User         @relation(fields: [userId], references: [id])
  project   Project      @relation(fields: [projectId], references: [id])

  @@index([userId])
  @@index([projectId])
}